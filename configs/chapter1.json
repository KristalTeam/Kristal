{    
    "enableStorage": false,          // Extra 48-slot item storage
    "enableRecruits": false,         // Enable recruit messages and menu
    "smallSaveMenu": true,           // Single-file save menu with no storage/recruits options
    "lessEquipments": true,          // Reduces the amount of available weapons and armor slots in the inventory

    "partyActions": false,           // Whether X-Actions appear in spell menu by default

    "growStronger": false,           // Stat increases after defeating an enemy with violence
    "growStrongerChara": null,       // Character to prioritize for the "X became stronger" message

    "susieStyle": 1,                 // Susie chapter style
    "ralseiStyle": 1,                // Ralsei chapter style

    "oldTensionBar": true,           // Syle of TP bar
    "oldUIPositions": true,          // Old positions of various UI elements
    "oldGameOver": true,             // The game over screen used in chapter 1

    "speechBubble": "round",         // Default enemy speech bubble style

    "enemyAuras": false,             // Red glow around overworld enemies

    "mercyMessages": false,          // "+X%" mercy messages
    "mercyBar": false,               // Mercy bar next to hp bar in enemy select
    "enemyBarPercentages": false,    // HP / Mercy bar percentages

    "targetSystem": true,            // Whether the target system should be used or not
    "soulInvBetweenWaves": true,     // Whether the soul invulnerability will carry between waves in battles
    
    "darkCurrency": "Dark Dollars",  // Full currency name for the Dark World
    "darkCurrencyShort": "D$",       // Short currency name for the Dark World

    "lightCurrency": "Money",        // Full currency name for the Light World
    "lightCurrencyShort": "$",       // Short currency name for the Light World
    "tpName": "TP",                  // Name of Tension Points in battles

    "prioritySpareableText": true,   // Whether enemies' spareable text should be prioritized over their tired / low-health text

    "pushBlockInputLock": true,      // Whether to lock the player's input when pushing a block
    "keepTensionAfterBattle": false, // Whether TP should be kept after battle instead of reset
